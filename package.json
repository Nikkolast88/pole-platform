{
  "name": "@pole-platform/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "pole platform",
  "author": {
    "name": "nikkolast88@gmail.com"
  },
  "scripts": {
    "lint": "vue-cli-service lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "prepare": "husky install",
    "commit": "npx lint-staged&&set NODE_ENV=commit&&git-cz",
    "build": "esno ./scripts/build.ts create",
    "build:icons": "pnpm run -C ./packages/icons-vue build",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish --access public"
  },
  "main": "index.js",
  "dependencies": {
    "@icon-park/vue-next": "^1.4.2",
    "@vueuse/core": "^9.10.0",
    "axios": "^1.2.2",
    "dayjs": "^1.11.7",
    "element-plus": "^2.2.28",
    "pinia": "^2.0.28",
    "qiankun": "^2.8.4",
    "vue": "^3.2.45",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@commitlint/cz-commitlint": "^17.4.1",
    "@types/figlet": "^1.5.5",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2.7.2",
    "@uni-daily/eslint-config-vue": "^0.0.4",
    "@uni-daily/stylelint-config-vue": "^0.0.5",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-router": "^5.0.8",
    "@vue/cli-plugin-typescript": "~5.0.8",
    "@vue/cli-service": "~5.0.8",
    "@vue/eslint-config-typescript": "^11.0.2",
    "bumpp": "^8.2.1",
    "commitizen": "^4.2.6",
    "commitlint": "^17.4.1",
    "compression-webpack-plugin": "^10.0.0",
    "consola": "^2.15.3",
    "eslint": "^8.31.0",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "figlet": "^1.5.2",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "lint-staged": "^13.1.0",
    "manifest-script-webpack-plugin": "^0.0.5",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "stylelint": "^14.16.1",
    "terser-webpack-plugin": "^5.3.6",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "unplugin-element-plus": "^0.4.1"
  },
  "keywords": [
    "Typescript",
    "Vue3"
  ],
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged --allow-empty $1",
      "commit-msg": "&& npx --no-install commitlint --edit $1"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint"
    ],
    "*.{vue,less,postcss,scss}": [
      "stylelint --fix"
    ]
  }
}
